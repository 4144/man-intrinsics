include Makefile-common

ROOTDIR=$(TMPDIR)/rpm
RPMDIRS=$(ROOTDIR)/BUILD\
        $(ROOTDIR)/BUILDROOT\
        $(ROOTDIR)/RPMS\
        $(ROOTDIR)/SOURCES\
        $(ROOTDIR)/SPECS\
        $(ROOTDIR)/SRPMS

OUTDIR=$(ROOTDIR)/BUILD

SPECNAME=man-intrinsics.spec
SPECDIR=.
SPECPATH=$(SPECDIR)/$(SPECNAME)

rpm: $(XMLFILES)
	$(MKDIR) $(RPMDIRS) $(OUTDIR)
	$(GENERATOR) --gzip --rpm-spec-dir=$(SPECDIR) -o $(OUTDIR)
	rpmbuild -bb $(SPECPATH) --define '_topdir ${ROOTDIR}'
	@find $(RPMDIRS) -name '*.rpm' -printf 'RPM path is "%p"\n'

